<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jasperReport PUBLIC '-//JasperReports//DTD Report Design//EN' 'http://jasperreports.sourceforge.net/dtds/jasperreport.dtd'>

<jasperReport name='items'
        pageWidth='521' columnWidth='521' pageHeight='842'
        leftMargin='0' rightMargin='0' topMargin='0' bottomMargin='0'>
    <reportFont name='small' isDefault='true' fontName='sansserif' size='9'/>
    <reportFont name='normal' isDefault='true' fontName='sansserif' size='12'/>
    <reportFont name='title' isDefault='true' fontName='sansserif' size='16'/>
    <parameter name='sess' class='session.EasyguestSession'/>
    <field name='this' class='java.lang.Object'/>
    <field name='article' class='java.lang.Object'/>
    <field name='price' class='java.lang.Double'/>
    <field name='quantity' class='java.lang.Double'/>
    <field name='amount' class='java.lang.Double'/>
    <variable name='article' class='data.Article'>
        <variableExpression>
            (data.Article)$F{article}
        </variableExpression>
    </variable>
    <variable name="total" class="java.lang.Double" calculation="Sum">
        <variableExpression>
            $F{amount}
        </variableExpression>
    </variable>
    <pageHeader>
        <band height='22'>
            <staticText>
                <reportElement x='0' y='0' width='120' height='18'/>
                <textElement>
                    <font reportFont='normal' isBold='true'/>
                </textElement>
                <text>
                    Article
                </text>
            </staticText>
            <staticText>
                <reportElement x='120' y='0' width='120' height='18'/>
                <textElement textAlignment='Right'>
                    <font reportFont='normal' isBold='true'/>
                </textElement>
                <text>
                    Prix
                </text>
            </staticText>
            <staticText>
                <reportElement x='240' y='0' width='120' height='18'/>
                <textElement textAlignment='Right'>
                    <font reportFont='normal' isBold='true'/>
                </textElement>
                <text>
                    Quantit√©
                </text>
            </staticText>
            <staticText>
                <reportElement x='360' y='0' width='120' height='18'/>
                <textElement textAlignment='Right'>
                    <font reportFont='normal' isBold='true'/>
                </textElement>
                <text>
                    Montant
                </text>
            </staticText>
            <line>
                <reportElement x='0' y='19' width='480' height='0'/>
                <graphicElement pen='Thin'/>
            </line>
        </band>
    </pageHeader>
    <detail>
        <band height='20'>
            <textField>
                <reportElement x='0' y='0' width='120' height='20'/>
                <textElement>
                    <font reportFont='normal'/>
                </textElement>
                <textFieldExpression>
                    $V{article}.getLabel()
                </textFieldExpression>
            </textField>
            <textField>
                <reportElement x='120' y='0' width='120' height='20'/>
                <textElement textAlignment='Right'>
                    <font reportFont='normal'/>
                </textElement>
                <textFieldExpression>
                    util.Util.dbl2str($F{price}.doubleValue())
                </textFieldExpression>
            </textField>
            <textField>
                <reportElement x='240' y='0' width='120' height='20'/>
                <textElement textAlignment='Right'>
                    <font reportFont='normal'/>
                </textElement>
                <textFieldExpression>
                    $F{quantity}.toString()
                </textFieldExpression>
            </textField>
            <textField>
                <reportElement x='360' y='0' width='120' height='20'/>
                <textElement textAlignment='Right'>
                    <font reportFont='normal'/>
                </textElement>
                <textFieldExpression>
                    util.Util.dbl2str($F{amount}.doubleValue())
                </textFieldExpression>
            </textField>
        </band>
    </detail>
    <summary>
        <band height='20'>
            <staticText>
                <reportElement x='240' y='0' width='120' height='20'/>
                <textElement textAlignment='Right'>
                    <font reportFont='normal' isBold='true'/>
                </textElement>
                <text>
                    Total:
                </text>
            </staticText>
            <textField>
                <reportElement x='360' y='0' width='120' height='20'/>
                <textElement textAlignment='Right'>
                    <font reportFont='normal' isBold='true'/>
                </textElement>
                <textFieldExpression>
                    util.Util.dbl2str($V{total}.doubleValue())
                </textFieldExpression>
            </textField>
       </band>
    </summary>
</jasperReport>
